<div class="page-header">
  <h2><%= @organization.name %></h2>
</div>

<div class="row">

  <div class="col-sm-offset-1 col-sm-10">

    <img src="<%= @organization.logo %>" class="img-fluid center-block" alt="Responsive image" height=150px>

    <br>

    <div class="col-sm-offset-1 col-sm-5">
      <%= simple_format(@organization.description) %>
    </div>

    <div class="col-sm-offset-0 col-sm-5">
      Location:
      <br>
      <br>
      <iframe
      frameborder="0" style="border:0; width: 100%; height: 175px"
      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA7LQxvUQoh4RY8Ns4hBZJyCHeHV7Ebpyc
      &q=<%= @organization.location %>" allowfullscreen>
    </iframe>
    <br>
    <br>
    <a href="mailto:<%= @organization.email %>?subject=I would like to know more about <%= @organization.name %> &body=I found out about your organization on ChicagoVolunteers, and would like to know more about your activities." class="btn btn-primary btn-sm">Send an Email</a>
    <a href="http://<%= @organization.website %>" class="btn btn-primary btn-sm">Visit Website</a>
    <br>
    <br>
    Open Projects:
     <br>
     <br>
    <ul><% @organization.projects.each do |project| %>
    <li><a href="/projects/<%= project.id %>">
      <%= project.name %>
    </a></li>
    <% end %>
  </ul>
    </div>
      </div>
        </div>
