<div class="page-header">
  <h1>
    Organizations
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
                <th>Name</th>
        <th>Description</th>
        <th>Website</th>
        <th>Logo</th>
        <th>Actions</th>
      </tr>

      <% @organizations.each do |organization| %>
      <tr>
                <td><%= organization.name %></td>
        <td><%= truncate(organization.description) %></td>
        <td><%= organization.website %></td>
        <td><img src="<%= organization.logo %>" class="img-fluid" alt="Responsive image" height=100px></td>
        <td>
          <a href="/organizations/<%= organization.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @organizations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
