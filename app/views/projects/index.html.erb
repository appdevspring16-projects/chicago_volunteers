<div class="page-header">
  <h1>
    Projects
      <% if current_organization != nil %>
      <a href="/projects/new" class="btn btn-lg btn-success">New Project</a>
      <% else %>
      <% end %>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "projects_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
    <%= f.label :number_of_volunteers_required_cont, "Number of volunteers required contains" %>
    <%= f.text_field :number_of_volunteers_required_cont, :class => "form-control", :placeholder => "Number of volunteers required contains" %>
  </div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :organization_email_cont, "Organization email contains" %>
      <%= f.text_field :organization_email_cont, :class => "form-control", :placeholder => "Organization email contains" %>
    </div>

<div class="form-group">
      <%= f.label :location_neighborhood_cont, "Location neighborhood contains" %>
      <%= f.text_field :location_neighborhood_cont, :class => "form-control", :placeholder => "Location neighborhood contains" %>
    </div>

<div class="form-group">
      <%= f.label :day_day_cont, "Day day contains" %>
      <%= f.text_field :day_day_cont, :class => "form-control", :placeholder => "Day day contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/projects" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#projects_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Day</th>
        <th>Description</th>
        <th>Number of volunteers required</th>
        <th>Organization</th>
        <th>Actions</th>
      </tr>

      <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td>
          <% if project.location.present? %>
            <a href="/locations/<%= project.location.id %>">
              <%= project.location.neighborhood %>
            </a>
          <% end %>
        </td>
        <td>
          <% if project.day.present? %>
            <a href="/days/<%= project.day.id %>">
              <%= project.day.day %>
            </a>
          <% end %>
        </td>
        <td><%= project.description %></td>
        <td><%= project.number_of_volunteers_required %></td>
        <td>
          <% if project.organization.present? %>
            <a href="/organizations/<%= project.organization.id %>">
              <%= project.organization.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/projects/<%= project.id %>" class="btn btn-primary">Show</a>

          <% if current_organization == project.organization %>
            <a href="/projects/<%= project.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_project/<%= project.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @projects, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
